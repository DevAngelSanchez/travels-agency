extends ./layouts/index

block content
  main.container.mt-5
    h1.text-center.mt-5
      | #{titlePage}

    include ./layouts/render_testimonials

    .row

      .col-md-12

        h2.d-block.w-100.text-center Add a testimonial

        if (errors)
          each error in errors
            .alert.alert-danger.col.text-center 
              | #{error.message}

      .row.justify-content-center.col
        .col-md-8
          form(action="/testimonials" method="POST")
            .form-group
              label(for="inputName") Name
              input#inputName(type="text", placeholder="Ej: Angel", name="name", class="form-control", value=name)
            .form-group
              label(for="email") Email
              input#email(type="text", placeholder="Ej: test@test.com", name="email", class="form-control", value=email)
            .form-group
              label(for="message") Message
              textarea#message(name="message", cols="30", rows="10", class="form-control",)=message
            input.btn.btn-success.btn-block(type="submit")